{
  "name": "wreckitloop",
  "version": "0.0.1",
  "description": "A CLI tool for turning ideas into automated PRs through an autonomous agent loop",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "wreckit": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean && cp -r src/prompts dist/",
    "dev": "bun run ./src/index.ts",
    "prepublishOnly": "bun run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "wreckit",
    "automation",
    "agent"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^3.0.0",
    "chalk": "^5.3.0",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "zod": "^3.24.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
